@model IEnumerable<SISVISA.Core.Models.Usuario>

<section class="content-header">
    <h1>Usuários</h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Configuração</a></li>
        <li><a href="@Url.Action("Index", "Usuario")">Usuários</a></li>
        <li class="active">Listagem</li>
    </ol>
</section><br />
<div class="box">
    <div class="box-header">
        <h3 class="box-title">@Html.ActionLink("Incluir", "Create")</h3>        
    </div>
    <div class="box-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>                    
                    <th>@Html.DisplayNameFor(model => model.txt_usuario)</th>
                    <th>@Html.DisplayNameFor(model => model.txt_email)</th>
                    <th>@Html.DisplayNameFor(model => model.txt_login)</th>
                    <th>@Html.DisplayNameFor(model => model.cod_ativo)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>                        
                        <td>@Html.DisplayFor(modelItem => item.txt_usuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.txt_email)</td>
                        <td>@Html.DisplayFor(modelItem => item.txt_login)</td>
                        <td>@Html.DisplayFor(modelItem => item.cod_ativo)</td>
                        <td>                            
                            <a href="@Url.Action("Edit", "Usuario", new { id = item.cod_usuario })" class="btn btn-primary btn-xs">Alterar</a>
                        </td>
                    </tr>
                }                
            </tbody>
        </table>
    </div>
</div>


